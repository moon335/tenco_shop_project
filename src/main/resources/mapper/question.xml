<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper
	namespace="com.tenco.tencoshop.repository.interfaces.QuestionRepository">
	<select id="readQuestion"
		resultType="com.tenco.tencoshop.repository.model.Question">
		select * from question_tb
		order by id desc
		limit #{begin},
		#{range};
	</select>
	
	<select id="questionCount"
		resultType="Double">
		select count(*) from question_tb;
	</select>

	<select id="searchQuestion"
		resultType="com.tenco.tencoshop.repository.model.Question">
		select * from question_tb
		where content like #{findWord}
		or
		title like #{findWord}
		order by id desc;

	</select>

	<select id="questionDetail"
		resultType="com.tenco.tencoshop.repository.model.Question">
		select * from question_tb
		where id=#{id};
	</select>

	<insert id="questionWriting">
		insert into
		question_tb(title,content,user_id,req_status)
		value(#{title},#{content},#{userId},#{reqStatus});
	</insert>

	<update id="questionUpdate">
		update question_tb set
		req_status = #{reqStatus} ,
		title = #{title},
		content= #{content},
		user_id=#{userId}
		where id =
		#{id};
	</update>
	<delete id="questionDelete">
		delete from question_tb
		where id=#{id};
	</delete>
</mapper>